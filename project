        <script>
            window.onload=function()
            {
                document.getElementById('addproject').click();
                document.getElementById('addrating').click();
            }
            const paddbtn=document.querySelector(".addprojects");
            paddbtn.id="addproject";
            const pinput=document.querySelector(".projects");
        
            function removeInput()
            {
                event.preventDefault()
                this.parentElement.remove();
            }
            function addInput()
            {
                event.preventDefault();
                const name=document.createElement("input");
                name.type="text";
                name.id="empname";
                name.setAttribute('required','');
                name.placeholder="Project name";

                const role= document.createElement("input");
                role.type="text";
                role.id="emprole";
                role.setAttribute('required','');
                role.placeholder="Role in the project";
                
                const AoI=document.createElement("textarea");
                AoI.type="text";
                AoI.id="empAoI";
                AoI.setAttribute('required','');
                AoI.placeholder="Areas of Improvement";

                const rewards=document.createElement("textarea");
                rewards.type="text";
                rewards.setAttribute('required','');
                rewards.id="emprewards";
                rewards.placeholder="Rewards during project";

                const a=document.createElement("div");
                a.className="pdeletediv";
                const btn=document.createElement("button");
                btn.className="delete";
                btn.innerHTML="<i class='fa-solid fa-trash'></i>Remove project";
                btn.addEventListener("click",removeInput);

                const learnbody=document.createElement("div");
                learnbody.className="learnings";

                const learn=document.createElement("div");
                learn.className="learnings";
                learn.textContent="Learnings during project period";

                const learnbtn=document.createElement("a");
                learnbtn.className="learningbutton";
                learnbtn.href="#";
                learnbtn.innerHTML="<i class='fa-solid fa-plus'></i>";
                learnbtn.addEventListener("click",function()
                    {
                        event.preventDefault();
                        const learning=document.createElement("div");
                        learning.className="learning";
                        const lname=document.createElement("textarea");
                        lname.type="text";
                        lname.setAttribute('required','');
                        lname.id="lerningarea"
                        lname.placeholder="learning";                
                        learnbody.appendChild(learning);
                        learning.appendChild(lname);
                        const lbtn=document.createElement("i");
                        lbtn.className="deletelearning";
                        lbtn.innerHTML="#";
                        lbtn.innerHTML="<i class='fa-solid fa-trash'></i>";
                        function removelearningInput()
                        {
                            this.parentElement.remove();
                        }
                        lbtn.addEventListener("click",removelearningInput);
                        learning.appendChild(lbtn);            
                    });

                const challangebody=document.createElement("div");
                challangebody.className="challangebody";

                const challanges=document.createElement("div");
                challanges.className="challanges";
                challanges.textContent="Challanges  Faced";

                const chabtn=document.createElement("a");
                chabtn.className="challangebutton";
                chabtn.href="#";
                chabtn.innerHTML="<i class='fa-solid fa-plus'></i>";
                chabtn.addEventListener("click",function()
                    {
                        event.preventDefault();
                        const challange=document.createElement("div");
                        challange.className="challange";
                        challange.className="challange";
                        const cname=document.createElement("textarea");
                        cname.type="text";
                        cname.id="cid";
                        cname.setAttribute('required','');
                        cname.placeholder="challange";
                        const cIname=document.createElement("textarea");
                        cIname.type="text";
                        cIname.setAttribute('required','');
                        cIname.className="improve";
                        cIname.placeholder="How you overcome it";              
                        challangebody.appendChild(challanges);
                        challanges.appendChild(challange);
                        challange.appendChild(cname);
                        challange.appendChild(cIname);
                        const crbtn=document.createElement("i");
                        crbtn.className="deletechallange";
                        crbtn.innerHTML="#";
                        crbtn.innerHTML="<i class='fa-solid fa-trash'></i>";
                        function removechallangeInput()
                        {
                            this.parentElement.remove();
                        }
                        crbtn.addEventListener("click",removechallangeInput);
                        challange.appendChild(crbtn);            
                    });

                const divblock=document.createElement("div");
                divblock.className="divblock";
                pinput.appendChild(divblock);
                divblock.appendChild(name);
                divblock.appendChild(role);
                divblock.appendChild(learnbody);
                learnbody.appendChild(learn);
                learn.appendChild(learnbtn);
                divblock.appendChild(challangebody);
                challangebody.appendChild(challanges);
                challanges.appendChild(chabtn);
                divblock.appendChild(AoI);
                divblock.appendChild(rewards);
                divblock.appendChild(btn);
            }
            paddbtn.addEventListener("click",addInput);


            const raddbtn=document.querySelector(".addrating");
raddbtn.id="addrating";
const rinput=document.querySelector(".rating");
function removereview()
{
    this.parentElement.remove();
}
function activestar()
    {
        const stars=this.parentElement.children;
        const starIndex=Array.from(stars).indexOf(this);
        for(let i=0;i<5;i++)
        {
            stars[i].classList.remove("active");
        }
        for(let i=0;i<=starIndex;i++)
        {
            stars[i].classList.toggle("active");
        }
    }

    //creating n number of stars

function createstars(starlist,n)
{
    const ratingicon='fa-solid fa-star';
    for(let i=0;i<n;i++)
    {
        starlist[i]=document.createElement("i");
        starlist[i].className=ratingicon;
        starlist[i].href="#";
        starlist[i].addEventListener("click",activestar);
    }
    
}

    //-------
    //star appending function

function appending(parent,child)
{
    let l=child.length;
    for(let i=0;i<l;i++)
    {
        parent.appendChild(child[i]);
    }
    
}
    //--------
    //created star div adding
function addstar(divblock,divrow,divtext,startype)
{
    divblock.appendChild(divrow);
    divrow.appendChild(divtext);
    appending(divrow,startype);
}

function addrating()
{
    event.preventDefault();
    
    const ratedby=document.createElement("input");
    ratedby.type="text";
    ratedby.id="ratedby";
    ratedby.setAttribute('required','');
    ratedby.placeholder="Rated By";

//22222
//22222222222222222222
    const tdiv=document.createElement('div');
    tdiv.className="tdiv";
    tdiv.textContent="Technical Skills";

    const techstar=document.createElement("div");
    techstar.className="techstar";
    techstar.id="techstar";

    const tstar=[];
    const n=5;
    createstars(tstar,n);
    tstar[0].id="techf";
    tstar[0].classList.add('active');

//22222
//22222222222222222222

    const Teamworkstar=document.createElement("div");
    Teamworkstar.className="Teamworkstar";
    Teamworkstar.id="PrblmSolvingstar";

    const tediv=document.createElement('div');
    tediv.className="tediv";
    tediv.textContent="Teamworkstar Skills";

    const testar=[];
    createstars(testar,n);
    testar[0].id="techf";
    testar[0].classList.add('active');

    
//22222
//22222222222222222222

const Initiativestar=document.createElement("div");
Initiativestar.className="Initiativestar";
Initiativestar.id="Initiativestar";
    
const idiv=document.createElement('div');
    idiv.className="idiv";
    idiv.textContent="Initiative Skills";

    const istar=[];
    createstars(istar,n);
    istar[0].id="if";
    istar[0].classList.add('active');

//22222
//22222222222222222222

const PrblmSolvingstar=document.createElement("div");
PrblmSolvingstar.className="PrblmSolvingstar";
PrblmSolvingstar.id='PrblmSolvingstar';
    
const pdiv=document.createElement('div');
    pdiv.className="pdiv";
    pdiv.textContent="Problem Solving Skills";

    const pstar=[];
    createstars(pstar,n);
    pstar[0].id="pf";
    pstar[0].classList.add('active');

//22222

    const commentby=document.createElement("textarea");
    commentby.type="text";
    commentby.id="commentby";
    commentby.setAttribute('required','');
    commentby.placeholder="Comments and suggessions:";

    const rbtn=document.createElement("button");
    rbtn.className="rdelete";
    rbtn.innerHTML="<i class='fa-solid fa-trash'></i>Remove review";
    rbtn.addEventListener("click",removereview);

    const rdivblock=document.createElement("div");
    rdivblock.className="pdivblock";
    rinput.appendChild(rdivblock);
    rdivblock.appendChild(ratedby);

    addstar(rdivblock,techstar,tdiv,tstar);

    addstar(rdivblock,Teamworkstar,tediv,testar);

    addstar(rdivblock,PrblmSolvingstar,pdiv,pstar);
 
    addstar(rdivblock,Initiativestar,idiv,istar);

    rdivblock.appendChild(commentby);
    rdivblock.appendChild(rbtn);
}
raddbtn.addEventListener("click",addrating);
        </script>
